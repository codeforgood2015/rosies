<div ng-show = "currentSelect === -1">
	<h3>Log In</h3>
	<form ng-controller = "LoginController as login">
	<span class = "label"> First Name: </span><input type = "text" ng-model = "user.firstName" placeholder = "type here" required><br>
	<span class = "label"> Last Name: </span><input type = "text" ng-model = "user.lastName" placeholder = "type here" required><br>
	<span class = "label"> Date of Birth: </span>
	<select id = "dobyear" ng-model = "user.dob.year" ng-change = "ctrl.updateDates()" required><option ng-repeat = "year in ctrl.years" value = {{year}}>{{year}}</option></select>
	<select id = "dobmonth" ng-model = "user.dob.month" ng-change = "ctrl.updateDates()" required><option ng-repeat = "month in ['January', 'February', 'March', 'April', 'May','June', 'July', 'August', 'September', 'October', 'November', 'December']" value = {{month}}>{{month}}</option></select>
	<select id = "dobdate" ng-model = "user.dob.day" required><option ng-repeat = "day in ctrl.monthDayPairs.January" value = {{day}}>{{day}}</option></select>
<br><br>
	<button type = "submit" class = "button-1" ng-click = "login.lookup(user)">next</button>
	</form>

</div>

<div ng-show = "currentSelect === 0">
<h3>Select a Date</h3>
	<br>
	<button class = "button0" ng-click="ctrl.selectDate(0); ctrl.next()"><b>{{ctrl.dateSlots[0]}}</b><br>(today)</button>
	<button class = "button0" ng-click="ctrl.selectDate(1);ctrl.next()"><b>{{ctrl.dateSlots[1]}}</b><br>(tomorrow)</button>
</div>

